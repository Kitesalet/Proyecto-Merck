@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ProyectoMerck.Models.ViewModels.FertformVM

@using (Html.BeginForm("FertilityCalculator", "Fertform", HttpMethod.Post))
{
    <header class="header-bg-color">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a href="@Url.Action("Index", "Home")" class="btn"><i class="bi bi-chevron-left header-icon-left"></i></a>
                <button class="navbar-toggler header-burger" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="bi bi-list text-light"></i>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a style="color:white" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="row subheader-body">
        <div class="col-md-12">
            <div class="col-12 text-center vh-50 mt-35">
                <img class="mb-4 subheader-img" src="~/imagenes/LogoMerck.jpg" />
                <div class="text-center subheader-div">
                    <div class="row align-items-center">
                        <div class="col">
                            <a href="@Url.Action("Index","Login")">
                                <img src="~/imagenes/FlechaIzquierda.png" />
                            </a>
                        </div>
                        <div class="col">
                            <p class="display-4 mb-0">@Localizer["FertilityCalculator"].Value</p>
                        </div>
                        <div class="col"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row rounded-header">
        </div>
    </div>
<div class="container">
    <div class="row border-bottom pb-5">
        <div class="col-6 col-md-5 col-lg-4 d-flex justify-content-end">
            <img src="/Imagenes/IconoEdadActual.png">
        </div>
        <div class="col-5">
            <div class="row pb-3">
                <h3 style="color:#4A1896">@Localizer["ActualAge"].Value</h3>
            </div>
            <div class="row">
                @Html.DropDownListFor(model => model.CurrentAge,
                         Enumerable.Range(12, 48).Select(age =>
                         new SelectListItem
                {
                    Text = age.ToString(),
                    Value = age.ToString()
                }), new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row border-bottom pb-5 pt-3">
        <div class="col-6 col-md-5 col-lg-4 d-flex justify-content-end">
            <img src="/Imagenes/IconoEdadPrimeraMenstruacion.png">
        </div>
        <div class="col-5">
            <div class="row pb-3">
                <h3 style="color:#CA287C">@Localizer["FirstAge"].Value</h3>
            </div>
            <div class="row">
                @Html.DropDownListFor(model => model.FirstFertilityAge,
                         Enumerable.Range(11, 10).Select(age =>
                         new SelectListItem
                {
                    Text = age.ToString(),
                    Value = age.ToString()
                }), new { @class = "form-control" })
            </div>
        </div>
            <div class="row">
                <div class="col-12 d-flex justify-content-center h5" style="color: #e61e50">
                    @Html.ValidationSummary(false)
                </div>
                <div class="row m-0">
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn col-8 col-sm-5 offset-sm-2 offset-md-0 col-md-4 p-2 my-3 border-light merck-button">
                            <span class="spinner-container"></span>
                            <span class="m-button-span">@Localizer["Send"]</span>
                        </button>
                    </div>
                </div>
            </div>
    </div>
</div>

}


