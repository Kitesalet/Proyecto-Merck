@model ProyectoMerck.Models.ViewModels.LoginVM

<div class="d-flex align-items-center justify-content-center body">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="container mx-auto login-container">
                <div class="row">
                    <div class="col my-4">
                        <img src="/Imagenes/LogoMerck.jpg"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @Html.LabelFor(m => m.Email, "Ingrese su email", new {@class = "h3"})
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @Html.TextBoxFor(m => m.Email,new { @class = "form-control",type="email" })
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @Html.LabelFor(m => m.Password, "Ingrese su password", new {@class = "h3 my-3"})
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", type = "password" })
                    </div>
                </div>
                <div class="row">
                    <div class="col mt-2">
                        @Html.ValidationSummary(false,"", new { @class = "text-danger h5" })
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="merck-button btn p-4 my-5 border-light col-12">
                            <span class="m-button-span">Ingreso Administradores</span>
                            <span class="spinner-container"></span>
                        </button>
                    </div>       
                </div>
                <hr />
                <div class="row">
                    <div class="col-12">
                        <a class="merck-button btn col-12 col-md-12 p-4 my-5 border-light" href="@Url.Action("Index", "Fertform")" >
                            <span class="m-button-span">Ingreso Invitados</span>
                            <span class="spinner-container"></span>
                        </a>
                    </div>
                </div>
            </div>
        }
</div>





   


                        