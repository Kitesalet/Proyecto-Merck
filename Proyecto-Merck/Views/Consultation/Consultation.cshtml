@model ConsultationViewModel
@using ProyectoMerck.Models.ViewModels

@{
    ViewData["Title"] = "Consutation";
}

<header style="background-color:#2EBDCD">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
        <div class="container-fluid">
            <a href="@Url.Action("Index", "Home")" class="btn"><i style="color: white; font-size: 1.5em" class="bi bi-chevron-left"></i></a>
            <button style="color: white; font-size: 2em" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <i class="bi bi-list" style="color:white"></i>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a style="color:white" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<div class="row" style="background-color: #2EBDCD; margin:0">
    <div class="col-md-12">
        <div class="col-12 text-center vh-50" style="margin-top: 35px">
            <img class="mb-4" style="display:block; margin-left:auto; margin-right:auto" src="~/imagenes/LogoMerck.jpg" />

            <div class="text-center" style="margin-top: 65px; margin-bottom: 45px; color:#aff3fb;">
                <div class="row align-items-center">
                    <div class="col">
                        <img src="~/imagenes/FlechaIzquierda.png" />
                    </div>
                    <div class="col">
                        <p class="display-4" style="margin-bottom:0;">Consulta</p>
                    </div>
                    <div class="col"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row" style="background-color: #ffff; border-top-left-radius: 1000px; border-top-right-radius: 1000px; height: 50px;margin:0">
    </div>
</div>


<div class="container">
    <form method="post" asp-action="AddConsultation" class="mx-auto mt-5 " style="max-width: 400px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3" style="padding-left:40px">
            <div class="input-group">
                <div class="input-group-append">
                    <img src="~/imagenes/FotoUbicacion.png" style="width: 80px; height: 80px;" />
                </div>
                <div class="input-group-append" style="margin-left:20px">
                    <label asp-for="Country" class="form-label" style="color: #776793; text-align:center; font-size: 23px; font-weight: 500; margin-bottom: 5px;">Pais</label>
                    <select asp-for="Country" class="form-control" id="Country" style="width: 200px; border-radius: 5px;">
                        <option value="">Seleccione un Pais</option>
                        @foreach (var country in Model.Countries)
                        {
                            <option value="@country.Value">@country.Text</option>
                        }
                        
                    </select>
                </div>
            </div>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>


        <div class="mb-3" style="padding-left:40px">
            <div class="input-group">
                <div class="input-group-append">
                    <img src="~/imagenes/FotoUbicacion.png" style="width: 80px; height: 80px;" />
                </div>
                <div class="input-group-append" style="margin-left:20px">
                    <label asp-for="Province" class="form-label" style="color: #776793; text-align:center; font-size: 23px; font-weight: 500; margin-bottom: 5px;">Provincia</label>
                    <select asp-for="Province" name="Province" class="form-control" id="Province" style="width: 200px; border-radius: 5px;">
                        <option value="">Seleccionar Provincia</option>
                        @foreach (var province in Model.Provinces)
                        {
                            <option value="@province.Value">@province.Text</option>
                        }
                    </select>
                </div>
            </div>
            <span asp-validation-for="Province" class="text-danger"></span>
        </div>



        <div class="mb-3" style="padding-left:40px">
            <div class="input-group">
                <div class="input-group-append">
                    <img src="~/imagenes/FotoUbicacion.png" style="width: 80px; height: 80px;" />
                </div>
                <div class="input-group-append" style="margin-left:20px">
                    <label asp-for="Location" class="form-label" style="color: #776793; text-align:center; font-size: 23px; font-weight: 500; margin-bottom: 5px;">Locacion</label>
                    <select asp-for="Location" name="Location" class="form-control" id="Location" style="width: 200px; border-radius: 5px;">
                        <option value="">Seleccionar Localidad</option>
                        @foreach (var location in Model.Locations)
                        {
                            <option value="@location.Value">@location.Text</option>
                        }
                    </select>
                </div>
            </div>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="mb-3" style="padding-left:40px">
            <div class="input-group">
                <div class="input-group-append">
                    <img src="~/imagenes/FotoUbicacion.png" style="width: 80px; height: 80px;" />
                </div>
                <div class="input-group-append" style="margin-left:20px">
                    <label asp-for="Clinic" class="form-label" style="color: #776793; text-align:center; font-size: 23px; font-weight: 500; margin-bottom: 5px;">Clinicas</label>
                    <select asp-for="Clinic" name="Clinic" class="form-control" id="Clinic" style="width: 200px; border-radius: 5px;">
                        <option value="">Seleccionar Clinica</option>
                        @foreach (var clinic in Model.Clinics)
                        {
                            <option value="@clinic.Value">@clinic.Text</option>
                        }
                    </select>
                </div>
            </div>
            <span asp-validation-for="Clinic" class="text-danger"></span>
        </div>



        <div class="mb-3" style="padding-left:40px">
            <div class="input-group">
                <div class="input-group-append">
                    <img src="~/imagenes/FotoEmail.png" style="width: 80px; height: 80px;" />
                </div>
                <div class="input-group-append" style="margin-left:20px">
                    <label asp-for="Email" class="form-label" style="color: #ef4488; text-align:center; font-size: 23px; font-weight: 500; margin:0px;">Mail contacto</label>
                    <input asp-for="Email" class="form-control" placeholder="Correo Electronico" style="width: 200px">
                </div>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>


        <div class="mb-3" style="padding-left:40px">
            <div class="input-group">
                <div class="input-group-append">
                    <img src="~/imagenes/FotoConsulta.png" style="width: 80px; height: 80px;" />
                </div>
                <div class="input-group-append" style="margin-left:20px">
                    <label asp-for="ReasonConsultation" class="form-label" style="color: #ef4488; text-align:center; font-size: 23px; font-weight: 500; margin:0px;">Motivo consulta</label>
                    <input asp-for="ReasonConsultation" class="form-control" placeholder="Escriba su Consulta" style="width: 200px; border-radius: 5px;">
                </div>
            </div>
            <span asp-validation-for="ReasonConsultation" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-center">
            <button type="submit" class="btn col-5 col-md-4 p-2 my-5 border-light merck-button">Enviar</button>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var provinceSelect = document.getElementById("Province");
        var locationSelect = document.getElementById("Location");
        var clinicSelect = document.getElementById("Clinic");

        provinceSelect.addEventListener("change", function () {
            var selectedProvince = provinceSelect.value;

            // Realiza una solicitud fetch al servidor para obtener las localidades
            fetch(`/Consultation/GetLocaties?province=${selectedProvince}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`Error: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(locations => {
                    // Maneja la respuesta del servidor y actualiza el select de localidades
                    updateLocationSelect(locations);
                })
                .catch(error => {
                    console.error(error);
                });

            // Realiza una solicitud fetch adicional para obtener las clínicas basadas en la provincia seleccionada
            fetch(`/Consultation/GetClinics?province=${selectedProvince}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`Error: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(clinics => {
                    // Maneja la respuesta del servidor y actualiza el select de clínicas
                    updateClinicSelect(clinics);
                })
                .catch(error => {
                    console.error(error);
                });
        });

        function updateLocationSelect(locations) {
            // Borra las opciones actuales en el select de localidades
            locationSelect.innerHTML = "<option value=''>Seleccionar Localidad</option>";

            // Agrega las nuevas opciones basadas en la respuesta del servidor
            locations.forEach(function (location) {
                var option = document.createElement("option");
                option.value = location.value;
                option.text = location.text;
                locationSelect.add(option);
            });
        }

        function updateClinicSelect(clinics) {
            // Borra las opciones actuales en el select de clínicas
            clinicSelect.innerHTML = "<option value=''>Seleccionar Clinica</option>";

            // Agrega las nuevas opciones basadas en la respuesta del servidor
            clinics.forEach(function (clinic) {
                var option = document.createElement("option");
                option.value = clinic.text;
                option.text = clinic.text;
                clinicSelect.add(option);
            });
        }

    });
</script>





































