@model ExportViewModel
@using ProyectoMerck.Models.ViewModels


<header style="background-color:#2EBDCD">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
        <div class="container-fluid">
            <a href="@Url.Action("Index", "Home")" class="btn"><i style="color: white; font-size: 1.5em" class="bi bi-chevron-left"></i></a>
            <button style="color: white; font-size: 2em" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <i class="bi bi-list" style="color:white"></i>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        <a style="color:white" class="nav-link" asp-area="" asp-controller="Login" asp-action="Logout">Cerrar Sesion</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div style="background-color:#2EBDCD; padding-top:60px; margin-bottom:50px">
    <div class="row justify-content-center">
        <div class="col-1"></div>
        <div class="col-7 offset-1 text-center align-self-center" style="color: white; font-size: 2em;margin-bottom:50px">Reporte</div>
        <div class="col-2">
        </div>

        <div style="background-color:white; border-top-left-radius: 1000px; border-top-right-radius: 1000px; height: 50px">
        </div>
    </div>
</div>
<div class="d-flex justify-content-center align-items-center" style="margin-top: 30px">
    <div class="d-flex">
        <div style="margin-right: 10px; margin-left: 10px;">
            <form id="exportForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="FechaInicio">Fecha de Inicio:</label>
                <input asp-for="FechaInicio" type="date" id="FechaInicio" name="FechaInicio" class="form-control" max="2024-12-31">
                <span asp-validation-for="FechaInicio"></span>

                <label asp-for="FechaFin">Fecha de Fin:</label>
                <input asp-for="FechaFin" type="date" id="FechaFin" name="FechaFin" class="form-control" max="2024-12-31">
                <span asp-validation-for="FechaFin"></span>

                <button type="button" onclick="exportar('excel')" class="btn btn-primary mt-3" style="border-radius: 35px; border: 2px solid white; background-color: #067785; color: #94d4de; font-size: 17px;">
                    Exportar Excel
                </button>

                <button type="button" onclick="exportar('pdf')" class="btn btn-primary mt-3" style="border-radius: 35px; border: 2px solid white; background-color: #067785; color: #94d4de; font-size: 17px;">
                    Exportar PDF
                </button>
            </form>
        </div>
    </div>
</div>
<script src="~/js/Navbar.js" asp-append-version="true"></script>


<script>
    function exportar(tipo) {
        var form = document.getElementById('exportForm');
        var action = tipo === 'excel' ? "@Url.Action("ExportPeopleToExcel")" : "@Url.Action("PrintPdf")";
        form.action = action;
        form.submit();
    }

    document.addEventListener('DOMContentLoaded', function () {
        const burger = document.getElementById('burger');
        const navList = document.getElementById('navList');

        burger.addEventListener('click', function () {
            navList.classList.toggle('show');
        });
    });

</script>