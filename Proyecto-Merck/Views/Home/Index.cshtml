@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body class="d-flex align-items-center body">
    <div class="container text-center">
        <div class="row">
            <div class="col-12">
                <img class="mb-100" src="~/Imagenes/LogoInicioMerck.png" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">                  
                <a id="m-button" class="btn col-6 col-md-3 py-2 my-5 border-light merck-button" href="@Url.Action("Index", "Login")">
